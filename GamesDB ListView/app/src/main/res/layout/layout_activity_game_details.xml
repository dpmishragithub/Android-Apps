<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game__details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.uncc.prateek.gamesdb.GameDetailsActivity"
    android:weightSum="1">

    <TextView
        android:text="@string/textView_GameName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_GameName"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_gameImage"
        android:layout_weight="0.74" />

    <TextView
        android:text="@string/textView_Overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_OverviewTitle"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="0.29"
        android:id="@+id/scrollView_Overview">

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Overview"
            android:textColor="@android:color/black"
            android:textSize="13sp"/>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/textView_Genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Genre"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold" />

        <TextView
            android:text="@string/textView_ViewGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_ViewGenre"
            android:textColor="@android:color/black"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/textView_Publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Publisher"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold" />

        <TextView
            android:text="@string/textView_ViewPublisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_ViewPublisher"
            android:textColor="@android:color/black"
            android:layout_weight="1" />

    </LinearLayout>
<!--
    <Button
        android:text="@string/button_PlayTrailer"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_PlayTrailer"
        android:layout_gravity="center"/>-->

    <Button
        android:text="@string/button_SimilarGames"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_SimilarGames"
        android:layout_gravity="center"/>

    <Button
        android:text="@string/button_Finish"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_Finish"
        android:layout_gravity="center"/>

</LinearLayout>
