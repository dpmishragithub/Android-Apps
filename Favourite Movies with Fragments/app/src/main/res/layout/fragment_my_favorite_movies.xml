<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyFavoriteMovies">

    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/space_50dp"
            android:minHeight="100dp"/>

        <Button
            android:text="@string/button_addMovie"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_addMovie"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <Button
            android:text="@string/button_editMovie"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_editMovie"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <Button
            android:text="@string/button_deleteMovie"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_deleteMovie"
            android:layout_gravity="center_vertical|center_horizontal"/>
        <Button
            android:text="@string/button_showListByYear"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_showListByYear"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <Button
            android:text="@string/button_showListByRating"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_showListByRating"
            android:layout_gravity="center_vertical|center_horizontal"/>


    </LinearLayout>

</LinearLayout>


</FrameLayout>
