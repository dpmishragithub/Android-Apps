<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/tripLayout"
    android:padding="10dp"
    android:weightSum="2">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/trip_picH"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="1dp"
            android:layout_weight="0.49"></com.github.siyamed.shapeimageview.CircularImageView>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.14"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tripNameH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:textColor="?attr/actionMenuTextColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/locationNameH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/colorFocusedHighlight"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvShowFriendsIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/btnJoin"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="@string/join" />

</LinearLayout>