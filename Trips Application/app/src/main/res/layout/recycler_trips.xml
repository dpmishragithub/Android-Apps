<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/tripLayout"
    android:weightSum="2">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/trip_picH"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="1dp"></com.github.siyamed.shapeimageview.CircularImageView>

        <LinearLayout
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tripNameH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/locationNameH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/colorFocusedHighlight"
                android:textSize="12sp" />
        </LinearLayout>

    <Button
        android:id="@+id/btnChat"
        android:layout_width="76dp"
        android:layout_height="36dp"
        android:text="@string/chat"
        android:textSize="8sp" />

    <Button
        android:id="@+id/btnSee"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:text="@string/view"
        android:textSize="8sp" />

</LinearLayout>