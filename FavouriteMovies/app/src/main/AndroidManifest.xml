<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uncc.prateek.favouritemovies">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddMovieActivity"
            android:label="@string/title_activity_add_movie"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditMovieActivity"
            android:label="@string/title_activity_edit_movie"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ViewListByYear"
            android:label="@string/title_activity_viewByYear"
            android:theme="@style/AppTheme" />
        <activity android:name=".ViewListByRating"
            android:label="@string/title_activity_viewByRating"
            android:theme="@style/AppTheme" />

        <activity android:name=".DeleteMovieActivity"></activity>
    </application>

</manifest>